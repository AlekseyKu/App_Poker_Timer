<WidgetTournamentCt>
    BoxLayout:
        id: id_box_ct
        orientation: "horizontal"
        size_hint: [1, 1]
        size: root.width, root.height
        background_color: (1, 1, 1, 1)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos

        #BoxLayout:
            #orientation: "horizontal"
            #size_hint: [1, 0.15]

        Label:
            id: id_label_num_round
            size_hint: [0.25, 1]
            text: root.label_num_round

        Label:
            id: id_m_blind
            size_hint: [0.1, 1]
            text: root.label_m_blinds

        Label:
            size_hint: [0.04, 1]
            text: "/"

        Label:
            id: id_b_blind
            size_hint: [0.1, 1]
            text: root.label_b_blinds

        Label:
            size_hint: [0.25, 1]
            text: "blinds"
            font_name: 'Georgia'
            #text_size: self.size
            #font_size: 40
            #valign: "bottom"
            #halign: "center"
            #padding_x: 5